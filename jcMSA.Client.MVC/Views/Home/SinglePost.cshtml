@model jcMSA.Posts.PCL.Transports.PostResponseItem

<div class="post">
    <div class="Date">
        <h3>@Model.PostDate.Date.ToLongDateString()</h3>
    </div>

    <div class="Content">
        <div class="Title">
            <h2>@Model.Title</h2>
        </div>

        <div class="CommentBar">
            <div class="PostedBy">
                <h4>Posted By Jarred Capellman</h4>
            </div>
        </div>

        <div class="Body">@(new MvcHtmlString(@Model.Body))</div>

        <div class="TagsBar">
            <div class="Title">
                Tags:
            </div>
        </div>
    </div>
</div>